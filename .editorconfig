# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown â€” keep trailing spaces for line breaks
[*.md]
trim_trailing_whitespace = false

# JSON, YAML, and Config files
[*.{json,yml,yaml}]
indent_size = 2

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = single
max_line_length = 100

# SCSS and CSS
[*.{scss,css}]
indent_size = 2

# HTML
[*.html]
indent_size = 2

# Ignore generated and vendor files
[dist/**]
insert_final_newline = false
trim_trailing_whitespace = false
