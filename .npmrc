# Always save exact versions (no ^ or ~ prefixes)
save-exact=true

# Prefer the npm registry for reliability
registry=https://registry.npmjs.org/

# Prevent accidental publishing to the public registry
private=true

# Disable package-lock.json generation (use clean installs)
package-lock=false

# Enforce strict SSL for security
strict-ssl=true

# Hide progress bars for cleaner CI logs
progress=false

# Limit concurrency for consistent installs on CI
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Default npm log level
loglevel=warn
